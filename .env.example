# Database
DATABASE_URL=postgresql://user:password@localhost:5432/savegame
REDIS_URL=redis://localhost:6379

# Auth
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API
NODE_ENV=development
API_URL=http://localhost:3002
API_PORT=3002

# Web Apps
WEB_URL=http://localhost:3000
MEMBER_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3002

# M-Pesa Configuration
MPESA_ENVIRONMENT=sandbox  # sandbox | production
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_PASSKEY=your-mpesa-passkey
MPESA_SHORTCODE=174379
MPESA_INITIATOR_NAME=testapi
MPESA_SECURITY_CREDENTIAL=your-security-credential
MPESA_CALLBACK_URL=https://yourdomain.com/api/v1/webhooks/mpesa
MPESA_TIMEOUT_URL=https://yourdomain.com/api/v1/webhooks/mpesa/timeout

# AfricasTalking (SMS/WhatsApp)
AT_API_KEY=your-africastalking-api-key
AT_USERNAME=sandbox  # Change to your username in production
AT_SENDER_ID=SAVEGAME

# Email (Resend)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@savegame.co

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
POSTHOG_API_KEY=your-posthog-api-key
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Storage (Optional - for avatars, logos)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=savegame-uploads

# Or use Cloudflare R2 / Supabase Storage
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Feature Flags (Optional)
ENABLE_WHATSAPP_NOTIFICATIONS=false
ENABLE_TEAM_CHALLENGES=true
ENABLE_REFERRALS=false
ENABLE_AI_INSIGHTS=false

# Development
DEBUG=true
LOG_LEVEL=debug  # debug | info | warn | error
